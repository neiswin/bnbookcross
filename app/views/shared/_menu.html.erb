
<header class="navbar navbar-expand-lg bg-light rounded mb-5" aria-label="Thirteenth navbar example">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample11" aria-controls="navbarsExample11" aria-expanded="true" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse d-lg-flex collapse show" id="navbarsExample11" style="">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        LOGO
      </a>
      <ul class="navbar-nav col-lg-6 justify-content-lg-center">
        <li class="nav-item">
          <%= link_to 'Главная', root_path, class: "nav-link px-2"   %>        
          </li>

          <li class="nav-item">
            <%= link_to 'Библиотека', books_path, class: "nav-link px-2"   %>
          </li>

          <li class="nav-item">
            <%= link_to 'Подарить книгу', new_interaction_path, class: "nav-link px-2"   %>    
          </li>

          <li class="nav-item">
            <% if policy(:book).new? %>
              <%= link_to 'Добавить книгу', new_book_path, class: "nav-link px-2"   %>
            <% end %>           
            </li>

            <li class="nav-item">                
              <% if policy([:admin, :user]).index? %>
                <%= link_to 'Пользователи', admin_users_path, class: "nav-link px-2"   %>
              <% end %>
            </li>
      </ul>
      <div class="d-lg-flex col-lg-3 justify-content-lg-end">
        <% if user_signed_in? %>
        <div class="btn-group">
        <%= link_to '#',
        class: 'btn btn-primary dropdown-toggle',
        data: {"bs-toggle": 'dropdown'} do %>
        <%= current_user.nickname %>
        <% end %>
          <ul class="dropdown-menu ">
            <li><%= link_to 'Профиль', user_path(current_user.id), method: :get, class: 'dropdown-item'%></li>
            <li><%= link_to 'Уведомления', user_interactions_path(current_user.id), method: :get, class: 'dropdown-item'%></li>
            <li><%= link_to 'Редактировать', edit_user_registration_path, method: :get, class: 'dropdown-item'%></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to 'Выйти', destroy_user_session_path, 'data-turbo-method': :delete, class: 'dropdown-item' %></li>
          </ul>
        </div>
      <% else %>
      <%= link_to 'Войти', new_user_session_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to 'Регистрация', new_user_registration_path, class: "btn btn-primary" %>           
      <% end %> 
      </div>
    </div>
  </div>
</header>
  
