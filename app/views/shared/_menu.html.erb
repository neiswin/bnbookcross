<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
         LOGO
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <%= link_to 'Главная', root_path, class: "nav-link px-2 link-dark"   %>
        <%= link_to 'Библиотека', books_path, class: "nav-link px-2 link-dark"   %>
        <% if policy(:book).new? %>
          <%= link_to 'Добавить книгу', new_book_path, class: "nav-link px-2 link-dark"   %>
        <% end %>
        <% if policy([:admin, :user]).index? %>
          <%= link_to 'Пользователи', admin_users_path, class: "nav-link px-2 link-dark"   %>
        <% end %>
      </ul>

      <div class="col-md-3 text-end">
        <% if user_signed_in? %>
          <div class="btn-group">
                <%= link_to '#',
                class: 'btn btn-primary dropdown-toggle',
                data: {"bs-toggle": 'dropdown'} do %>
                    <%= current_user.nickname %>
                                            <% end %>
                  <ul class="dropdown-menu ">
                    <li><%= link_to 'Профиль', user_path(current_user.id), method: :get, class: 'dropdown-item'%></li>
                    <li><%= link_to 'Редактировать', edit_user_registration_path, method: :get, class: 'dropdown-item'%></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to 'Выйти', destroy_user_session_path, 'data-turbo-method': :delete, class: 'dropdown-item' %></li>
                  </ul>
          </div>
          <% else %>
            <%= link_to 'Войти', new_user_session_path, class: "btn btn-outline-primary me-2" %>
            <%= link_to 'Регистрация', new_user_registration_path, class: "btn btn-primary" %>           
          <% end %> 
      </div>
</header>
  
