
<% provide :page_title, "Редактирование пользователя" %>

<h1 class="text-center">Редактирование <%= resource_name.to_s.humanize %></h1>

<div class="row">

    <div class="col-3 col-sm-2">
    </div>


    <div class="col-12 col-sm-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>


          
        <div class="mb-3 ">
          <div class="form-floating">
            <%= f.text_field :first_name, placeholder: "Имя", autofocus: true, autocomplete: "first_name", class:'form-control shadow-sm'  %>
            <%= f.label :first_name, 'Ваше имя', placeholder: "Имя" %>
          </div>
        </div>

        <div class="mb-3 ">
          <div class="form-floating  ">
            <%= f.text_field :last_name, placeholder: "Фамилия", autocomplete: "last_name", class:'form-control shadow-sm'  %>
            <%= f.label :last_name, 'Ваша фамилия' %>
          </div>
        </div>
       
        <div class="mb-2 ">
          <div class="form-floating  ">
            <%= f.telephone_field :phone_number, placeholder: "Оставьте свой номер телефона", autocomplete: "phone_number", class:'form-control shadow-sm'  %>
            <%= f.label :phone_number, 'Номер телефона' %>
          </div>
        </div>

        <div class="mb-3 ">
          <div class="form-floating  ">
            <%= f.text_field :nickname, placeholder: "Никнейм", autocomplete: "nickname", class:'form-control shadow-sm'  %>
            <%= f.label :nickname, 'Ваш никнейм' %>
          </div>
          <p class="form-text text-muted">
            Ваш никнейм должен уникальным
          </p>
        </div>

        <div class="mb-3 ">
          <div class="form-floating  ">
            <%= f.email_field :email, placeholder: "email", autocomplete: "email", class:'form-control shadow-sm'  %>
            <%= f.label :email, 'Ваш email' %>
          </div>
          <p class="form-text text-muted">
            email, который будет использоваться для входа на сайт. (Пример: example@gmail.com)
          </p>
        </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="mb-3 ">
            <div class="form-floating  ">
              <%= f.password_field :current_password, placeholder: "password", autocomplete: "current-password", class:'form-control shadow-sm'  %>
              <%= f.label :current_password, 'Текущий пароль' %>
              <p class="form-text">Нам нужен Ваш текущий пароль для подтверждения изменений</p>
            </div>
          </div>
          <hr>
          <div class="mb-3 ">
          <p class="mb-2">Оставьте эти поля пустыми, если не хотите их изменять</p>
            <div class="form-floating  ">
              <%= f.password_field :password, placeholder: "Пароль", autocomplete: "password", class:'form-control shadow-sm'  %>
              <%= f.label :password, 'Пароль' %>
            </div>
            <% if @minimum_password_length %>
              <p class="form-text text-muted">
                Придумайте пароль (<%= @minimum_password_length %> символов минимум)
              </p>
            <% end %>
          </div>

          <div class="mb-3 ">
            <div class="form-floating  ">
              <%= f.password_field :password_confirmation, placeholder: "new-password", autocomplete: "current-password", class:'form-control shadow-sm'  %>
              <%= f.label :password_confirmation, 'Повторите пароль' %>
            </div>
          </div>



          <div class="mb-3">
            <%= f.submit "Обновить", class: "btn btn-primary", data: { turbo:false } %>
          </div>
        <% end %>

          <div class="mb-3">
            <p class="lead">
                Для удаления аккаунта нажмите на кнопку<%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" %>
            </p>
            <p class="lead">
                <%= link_to "Назад", :back %>
            </p>
          </div>
    </div>

    <div class="col-3 col-sm-2">
    </div>

</div>

