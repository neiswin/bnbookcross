<div class="row">
  
  <div class="col-md-5 border-right">
      <div class="py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right display-7">Поиск книг по фильтру</h4>
        </div>

        <div class="row mt-2">
          <div class="col-md-12">
          <%= search_form_for @q do |f| %>
          
              <div class="input-group input-group-sm">
                  <%= f.search_field :title_cont, placeholder: "Поиск по названию", class: "form-control" %>
                  <%= f.submit "Go", class: "btn btn btn-success", data: { turbo:false } %>
              </div>


          </div>
        </div>

        <div class="row mt-2">
          <div class="col-md-12">

              <div class="input-group input-group-sm">
                  <%= f.search_field :author_cont, placeholder: "Поиск по автору", class: "form-control" %>
                  <%= f.submit "Go", class: "btn btn btn-success", data: { turbo:false } %>
              </div>
          
          
          </div>
        </div>

        <div class="row mt-2">
          <div class="col-md-12 mb-3">

              <div class="input-group input-group-sm">
                <%= f.search_field :place_id_cont, placeholder: "Поиск по месту", class: "form-control" %>
                <%= f.submit "Go", class: "btn btn btn-success", data: { turbo:false } %>
              </div>

          </div>
        </div>
      
          <% end %>
      </div>
  </div>
</div>
