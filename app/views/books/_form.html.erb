  <div class="row">
    <div class="col-3 col-sm-2">
    </div>

    <div class="col-12 col-sm-8">

      <%= render 'shared/errors', object: @book %>   
     
      <%= form_with model: @book do |f|%>

      <div class="mb-2">
          <%= f.label :title, "Название книги", class: "form-label" %>
          <%= f.text_field :title, placeholder: "Введите название", class:'form-control'  %>
      </div>

      <div class="mb-2">
        <%= f.label :author, "Автор книги", class: "form-label" %>
        <%= f.text_field :author, placeholder: "Введите автора", class:'form-control'  %>
      </div>
      
      <div class="mb-2">
        <%= f.label :description, "Описание", class: "form-label" %>
        <%= f.text_area :description, placeholder: "Описание вводить необязательно", class:'form-control'  %>
      </div>

      <div class="mb-2">      
          <%= f.label :condition_book, "Состояние книги", class: "form-label" %>
          <%= f.select :condition_book, ["Как новая", "Удовлетворительно", "Повидавшая жизнь"], { label: "Выбери состояние книги:",
           wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "form-select" } %>
      </div>

      <div class="mb-2">      
          <%= f.label :status_book, "Статус книги", class: "form-label" %>
          <%= f.select :status_book, [["Свободна", 1], ["Забронированна", 2],["Читается", 3]], { label: "Изменить статус книги:",
           wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "form-select" } %>
      </div>

      <div class="mb-2">
        <%= f.submit "Сохранить", class: "btn btn-success w-150 mt-3", data: { turbo:false } %>
      </div>

      <% end %>

    </div>

  <div class="col-3 col-sm-2">
  </div>
</div>